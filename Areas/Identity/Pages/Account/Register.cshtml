@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@section Styles{
    <link rel="stylesheet" href="~/css/register.css"/>
    
}

        <p class="sign" align="center">¡Registrate!</p>
        <div class="main">
            

            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form1">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <!--<label asp-for="Input.Email" class="test"></label>-->
                    <input asp-for="Input.Email" class="un " placeholder="Correo electrónico" align="center"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <!--<label asp-for="Input.Password"></label>-->
                    <input asp-for="Input.Password" class="pass" placeholder="Contraseña" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    
                </div>
                <div class="form-group">
                    <!--<label asp-for="Input.ConfirmPassword"></label>-->
                    <input asp-for="Input.ConfirmPassword" class="pass" placeholder="Repita la contraseña"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="submit" align="center">Register</button>
            </form>
        </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
