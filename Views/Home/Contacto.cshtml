<div class="contact-section">

  <h1>ENVÍA TU CONSULTA</h1>
  <div class="border"></div>
  <form class="contact-form" action="@Url.Action("EnviarContacto", "Home")" method="POST">
    <input type="text" class="contact-form-text" name="nombre" placeholder="Nombre/s...">
    <input type="email" class="contact-form-text" name="correo" placeholder="Correo electrónico...">
    <input type="text" class="contact-form-text" name="numTelefono" placeholder="Número de teléfono...">
    <input type="text" class="contact-form-text" name="motivo" placeholder="Motivo...">
    <textarea class="contact-form-text" name="mensaje" placeholder="Dejá tu mensaje..."></textarea>
    <input type="submit" class="contact-form-btn" value="Send">
  </form>
</div>