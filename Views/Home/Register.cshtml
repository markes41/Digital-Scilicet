@section Styles{
    <link rel="stylesheet" href="~/css/register.css"/>
    
}

        <p class="sign" align="center">¡Registrate!</p>
        <div class="main">
            

            <form action="@Url.Action("RegistrarUsuario", "Home")" method="POST" class="form1">
                <div class="form-group">
                    <input class="un " type="email"  name="mail" placeholder="Correo electrónico" align="center"/>
                </div>
                <div class="form-group">
                    <input class="pass" name="nombre" placeholder="Nombre" />
                </div>
                <div class="form-group">
                    <input class="pass" name="username" placeholder="Nickname"/>
                </div>
                <div class="form-group">
                    <input class="pass" type="password" name="password" placeholder="Contraseña"/>
                </div>

                <div class="check-group">
                    <input name="chec" type="checkbox" id="chec" onchange="comprobar();"/>
                    <label for="chec">Si sos administrador activá y colocá la clave.</label>
                </div>

                <div class="form-group">
                     <input class="un " name="claveadmin" id="boton" placeholder="Clave de administrador" readonly />
                </div>
                <button type="submit" class="submit" align="center">Registrarse</button>
            </form>
        </div>