@section Styles{
    <link rel="stylesheet" href="~/css/register.css"/>
    
}

@{
    bool existeUsuario = (ViewBag.existeUsuario != null);
}

        <p class="sign" align="center">¡Registrate!</p>
        <div class="main">
            

            <form action="@Url.Action("RegistrarUsuario", "Home")" method="POST" class="form1">
                @if(existeUsuario)
                {
                    <p class="error-credenciales">Ya existe un usuario registrado con ese mail o username.</p>
                }
                <div class="form-group">
                    <input class="un " type="email"  name="mail" placeholder="Correo electrónico" align="center" required/>
                </div>
                <div class="form-group">
                    <input class="pass" name="nombre" placeholder="Nombre" required/>
                </div>
                <div class="form-group">
                    <input class="pass" name="username" placeholder="Nickname" required/>
                </div>
                <div class="form-group">
                    <input class="pass" type="password" name="password" placeholder="Contraseña" required/>
                </div>

                <div class="check-group">
                    <input name="chec" type="checkbox" id="chec" onchange="comprobar();"/>
                    <label for="chec">Si sos administrador activá y colocá la clave.</label>
                </div>

                <div class="form-group">
                     <input class="un " type="password" name="claveadmin" id="boton" placeholder="Clave de administrador" readonly />
                </div>
                <button type="submit" class="submit" align="center">Registrarse</button>
            </form>
        </div>